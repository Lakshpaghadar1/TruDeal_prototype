<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/robotoCalendarDateTitleContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/leftButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_previous_square_bg"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/dayText"
        style="@style/RobotoCalendarMonthText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="start|center_vertical"
        android:tag="dateTitle"
        tools:text="Day" />

    <TextView
        android:id="@+id/monthText"
        style="@style/RobotoCalendarMonthText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:textColor="@color/roboto_calendar_month_font"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:tag="dateTitle"
        tools:text="December" />

    <TextView
        android:id="@+id/yearText"
        style="@style/RobotoCalendarMonthText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="end|center_vertical"
        android:tag="dateTitle"
        tools:text="2021" />

    <ImageView
        android:id="@+id/rightButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_next_square_bg"
        tools:ignore="ContentDescription" />
</LinearLayout>