<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutEditText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_edittext_with_dark_outline">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dollarSuffix"
        style="@style/Regular.9ssp.C_808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:text="$"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText"
        style="@style/Regular.9ssp.C_000000"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:drawableEnd="@drawable/ic_down_arrow_black"
        android:drawablePadding="@dimen/_10sdp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="start"
        android:paddingVertical="@dimen/_8sdp"
        android:paddingStart="@dimen/_3sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:textColorHint="@color/C_808080"
        app:layout_constraintBottom_toBottomOf="@id/dollarSuffix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dollarSuffix"
        app:layout_constraintTop_toTopOf="@id/dollarSuffix" />

</androidx.constraintlayout.widget.ConstraintLayout>