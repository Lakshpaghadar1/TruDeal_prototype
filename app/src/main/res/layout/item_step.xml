<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewStepCount"
        style="@style/SemiBold.10ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_for_steps"
        android:gravity="center"
        android:elevation="@dimen/_2sdp"
        tools:text="1"
        android:textColor="@color/step_count_text_color_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/C_D3D3D3"
        app:layout_constraintBottom_toBottomOf="@id/textViewStepCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewStepCount"
        app:layout_constraintTop_toTopOf="@id/textViewStepCount" />

</androidx.constraintlayout.widget.ConstraintLayout>